<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp1"
        Title="File Converter Tool" Height="450" Width="700">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- أزرار التحكم -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Name="btnAddFile" Content="Add File" Width="100" Margin="0,0,10,0" Click="btnAddFile_Click"/>
            <Button Name="btnStart" Content="Start Conversion" Width="150" Click="btnStart_Click"/>
        </StackPanel>

        <!-- قائمة الملفات مع Drag & Drop -->
        <ListView Name="lvFiles" Grid.Row="1" ItemsSource="{Binding Jobs}"
                  AllowDrop="True"
                  Drop="lvFiles_Drop"
                  DragOver="lvFiles_DragOver">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="File Name" DisplayMemberBinding="{Binding SourcePath}" Width="250"/>
                    <GridViewColumn Header="Type" DisplayMemberBinding="{Binding FileType}" Width="80"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="100"/>
                    <GridViewColumn Header="Progress">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Minimum="0" Maximum="100" Height="20" Value="{Binding Progress}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!-- عمود Cancel صحيح -->
                    <GridViewColumn Header="Action">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Cancel" Click="Cancel_Click"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- رسالة حالة عامة -->
        <TextBlock Name="txtStatus" Grid.Row="2" Margin="0,10,0,0" FontWeight="Bold" />
    </Grid>
</Window>
